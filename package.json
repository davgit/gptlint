{
  "name": "gptlint",
  "description": "A linter with superpowers! Use LLMs to enforce best practices across your codebase in a standardized, configurable, scalable manner.",
  "author": "Travis Fischer <travis@transitivebullsh.it>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "transitive-bullshit/eslint-plus-plus"
  },
  "packageManager": "pnpm@8.15.5",
  "engines": {
    "node": ">=18"
  },
  "type": "module",
  "source": "./bin/lint.ts",
  "types": "./dist/lint.d.ts",
  "bin": {
    "gptlint": "./dist/bin/lint.js"
  },
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    }
  },
  "files": [
    "dist",
    "package.json",
    "readme.md",
    "license",
    "docs",
    "media"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "del dist",
    "prebuild": "run-s clean",
    "predev": "run-s clean",
    "pretest": "run-s build",
    "prepare": "husky",
    "precommit": "lint-staged",
    "test": "run-s test:*",
    "test:format": "prettier --check \"**/*.{js,ts,tsx}\"",
    "test:lint": "eslint .",
    "test:typecheck": "tsc --noEmit",
    "test:unit": "vitest run"
  },
  "dependencies": {
    "@dexaai/dexter": "^1.2.10",
    "@sindresorhus/slugify": "^2.2.1",
    "@swc/core": "^1.4.12",
    "array-uniq": "^3.0.0",
    "cleye": "^1.3.2",
    "dotenv": "^16.4.5",
    "exit-hook": "^4.0.0",
    "fast-json-stable-stringify": "^2.1.0",
    "find-cache-dir": "^5.0.0",
    "globby": "^14.0.1",
    "hash-object": "^5.0.1",
    "jsonrepair": "^3.6.0",
    "mdast-util-gfm": "^3.0.0",
    "mdast-util-to-markdown": "^2.1.0",
    "mdast-util-to-string": "^4.0.0",
    "p-map": "^7.0.1",
    "p-retry": "^6.2.0",
    "parse-gitignore": "^2.0.0",
    "path-exists": "^5.0.0",
    "plur": "^5.1.0",
    "pretty-ms": "^9.0.0",
    "promise.withresolvers": "^1.0.3",
    "remark-gfm": "^4.0.0",
    "remark-parse": "^11.0.0",
    "tasuku": "^2.0.1",
    "tiny-invariant": "^1.3.3",
    "type-fest": "^4.14.0",
    "unified": "^11.0.4",
    "unist-util-inspect": "^8.0.0",
    "unist-util-is": "^6.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@fisch0920/eslint-config": "^1.1.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/mdast": "^4.0.3",
    "@types/node": "^20.12.2",
    "@types/parse-gitignore": "^1.0.2",
    "@types/prettier": "2",
    "del-cli": "^5.1.0",
    "eslint": "^8.57.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "npm-run-all2": "^6.1.2",
    "prettier": "^2.8.8",
    "tsup": "^8.0.2",
    "tsx": "^4.7.1",
    "typescript": "^5.4.2",
    "vite": "^5.2.7",
    "vitest": "^1.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --ignore-unknown --write"
    ]
  }
}
